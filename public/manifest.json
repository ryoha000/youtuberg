{
  "manifest_version":2,
  "name":"youtuberg",
  "version":"0.0.0",
  "permissions":[],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background":{
    "scripts":[
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content_script.js"]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "youtuberg_wasm_bg.wasm"
  ]
}